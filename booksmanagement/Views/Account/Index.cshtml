@model IEnumerable<booksmanagement.ViewModels.UserListViewModel>
@{
    ViewBag.Title = "User Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a href="@Url.Action("Register", "Account")" class="btn btn-primary shadow-sm">
        <i class="fa fa-plus fa-sm text-white-50"></i>
        Create New
    </a>
</p>

<div class="row" ng-controller="AccountCtrl">
    <div class="col-sm-12">
        <div class="card">

            <div class="card-block">
                <div class="dt-responsive table-responsive">
                    <table id="users-table" class="table table-striped table-bordered nowrap">
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>First name</th>
                                <th>Last name</th>
                                <th>Created date</th>
                                <th>Role</th>
                                <th>Approved</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            { //
                                string rowStyle = !item.IsApproved ? "background-color:#c6f2c6" : !item.IsActive ? "background-color:#f6acac" : null;
                                <tr style="@rowStyle">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Role)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsApproved)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.UserId }) |
                                        <input type="button" name="submit" ng-click="deleteUser('@item.UserId')" class="btn btn-danger" value="Delete" />
                                        @*@using (Html.BeginForm("DeleteConfirmed", "Account", new { id = item.UserId }, FormMethod.Post, new { id = "formDeleteUser" }))
                                        {
                                            @Html.AntiForgeryToken()

                                        }*@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/js/ng-controllers/account-ctrl.js"></script>
    <script>
        $('#users-table').DataTable({
            "order": [
                [0, "asc"]
            ]
        });
    </script>
}


