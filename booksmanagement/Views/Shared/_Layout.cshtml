    <script src="~/Scripts/vendor/jquery-slimscroll/js/jquery.slimscroll.js"></script>
    <script src="~/Scripts/assets/js/pcoded.min.js"></script>
    <script src="~/Scripts/assets/js/vertical/vertical-layout.min.js"></script>
    <script src="~/Scripts/vendor/modernizr/js/modernizr.js"></script>
    <script src="~/Scripts/vendor/modernizr/js/css-scrollbars.js"></script>
    <script src="~/Scripts/assets/js/common-pages.js"></script>
    <script src="~/Scripts/assets/js/script.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
